{
  "manifest_version": 3,
  "name": "Roblox Friend Hider",
  "version": "0.0.0.1",
  "description": "Hide specific Roblox friends from your view with one click.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://*.roblox.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["*://*.roblox.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 